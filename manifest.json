{
  "name": "Subsession",
  "version": "0.1.0",
  "description": "Saves tabs from current window to a subsession that can be restored on this or any synced desktop browser.",
  "permissions": [
    "tabs",
    "storage",
    "declarativeContent",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/subsession-active16.png",
      "32": "icons/subsession-active32.png",
      "48": "icons/subsession-active48.png",
      "96": "icons/subsession-active96.png",
      "128": "icons/subsession-active128.png"
    }
  },

  "manifest_version": 2
}
