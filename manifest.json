{
  "name": "Subsession",
  "version": "0.1.0",
  "description": "Saves tabs from current window to a subsession that can be restored on this or any synced desktop browser.",
  "permissions": [
    "tabs",
    "storage",
    "declarativeContent",
    "activeTab"
  ],
  "background": {
    "scripts": ["background.js"],
    "persistent": true
  },
  "browser_action": {
    "default_popup": "popup/popup.html",
    "default_icon": {
      "16": "icons/v2/subsession16.png",
      "24": "icons/v2/subsession24.png",
      "32": "icons/v2/subsession32.png",
      "64": "icons/v2/subsession64.png",
      "128": "icons/v2/subsession128.png",
      "256": "icons/v2/subsession256.png",
      "512": "icons/v2/subsession512.png"
    }
  },
  "icons": {
    "16": "icons/v2/subsession16.png",
    "24": "icons/v2/subsession24.png",
    "32": "icons/v2/subsession32.png",
    "64": "icons/v2/subsession64.png",
    "128": "icons/v2/subsession128.png",
    "256": "icons/v2/subsession256.png",
    "512": "icons/v2/subsession512.png"
  },

  "manifest_version": 2
}
